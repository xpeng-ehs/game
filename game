    <script>
        // æ‰¿è¯ºæ–‡æœ¬
        const pledgeSentence = "æˆ‘æ‰¿è¯ºéµå®ˆå…¬å¸å®‰å…¨è§„ç« åˆ¶åº¦ï¼ŒæŒ‰æ—¶æŒ‰éœ€å®Œæˆå®‰å…¨åŸ¹è®­ã€å‚ä¸åº”æ€¥æ¼”ç»ƒå’Œå®ŒæˆèŒä¸šå¥åº·ä½“æ£€ã€‚";
        let clickedWords = 0;
        let totalWords = 0;
        let employeeInfo = {};
        
        // é¡µé¢åŠ è½½å®Œæˆååˆå§‹åŒ–
        document.addEventListener('DOMContentLoaded', function() {
            initPledgeGame();
        });
        
        // åˆå§‹åŒ–æ‰¿è¯ºæ¸¸æˆ
        function initPledgeGame() {
            const pledgeTextDiv = document.getElementById('pledgeText');
            pledgeTextDiv.innerHTML = '';
            
            // å°†æ‰¿è¯ºæ–‡æœ¬æ‹†åˆ†ä¸ºå­—ç¬¦æ•°ç»„ï¼ˆåŒ…æ‹¬æ ‡ç‚¹ï¼‰
            const words = pledgeSentence.split('');
            totalWords = words.length;
            
            // æ›´æ–°æ€»å­—æ•°æ˜¾ç¤º
            document.getElementById('totalCount').textContent = totalWords;
            
            // ä¸ºæ¯ä¸ªå­—åˆ›å»ºå¯ç‚¹å‡»å…ƒç´ 
            words.forEach((word, index) => {
                const span = document.createElement('span');
                span.className = 'pledge-word unclicked';
                span.textContent = word;
                span.dataset.index = index;
                
                // æ·»åŠ ç‚¹å‡»äº‹ä»¶
                span.addEventListener('click', function() {
                    if (!this.classList.contains('clicked')) {
                        this.classList.remove('unclicked');
                        this.classList.add('clicked');
                        clickedWords++;
                        
                        // æ·»åŠ ç‚¹å‡»æ•ˆæœ
                        this.style.animation = 'none';
                        setTimeout(() => {
                            this.style.animation = 'clickEffect 0.3s';
                        }, 10);
                        
                        // æ›´æ–°è¿›åº¦
                        updateProgress();
                    }
                });
                
                pledgeTextDiv.appendChild(span);
            });
            
            // åˆå§‹åŒ–è¿›åº¦
            updateProgress();
        }
        
        // æ›´æ–°è¿›åº¦æ¡å’Œè®¡æ•°
        function updateProgress() {
            const progress = (clickedWords / totalWords) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
            document.getElementById('clickedCount').textContent = clickedWords;
            
            // å¦‚æœæ‰€æœ‰å­—éƒ½è¢«ç‚¹å‡»ï¼Œå¯ç”¨æäº¤æŒ‰é’®
            const submitBtn = document.getElementById('submitBtn');
            if (clickedWords === totalWords) {
                submitBtn.disabled = false;
                submitBtn.innerHTML = 'ğŸ‰ æäº¤å®‰å…¨æ‰¿è¯º';
            } else {
                submitBtn.disabled = true;
                submitBtn.innerHTML = 'æäº¤å®‰å…¨æ‰¿è¯º';
            }
        }
        
        // åˆ‡æ¢åˆ°ä¸‹ä¸€æ­¥
        function nextStep(currentStep) {
            // éªŒè¯æ­¥éª¤1çš„è¾“å…¥
            if (currentStep === 1) {
                const name = document.getElementById('employeeName').value.trim();
                const id = document.getElementById('employeeId').value.trim();
                const dept = document.getElementById('department').value;
                
                if (!name || !id || !dept) {
                    alert('è¯·å¡«å†™å®Œæ•´çš„å‘˜å·¥ä¿¡æ¯ï¼');
                    return;
                }
                
                // ä¿å­˜å‘˜å·¥ä¿¡æ¯
                employeeInfo = {
                    name: name,
                    id: id,
                    department: dept
                };
            }
            
            // åˆ‡æ¢åˆ°ä¸‹ä¸€æ­¥
            document.getElementById(`step${currentStep}`).classList.remove('active');
            document.getElementById(`step${currentStep + 1}`).classList.add('active');
            
            // å¦‚æœæ˜¯ç¬¬ä¸‰æ­¥ï¼Œé‡æ–°åˆå§‹åŒ–æ¸¸æˆï¼ˆç¡®ä¿æ¯æ¬¡è¿›å…¥éƒ½æ˜¯åˆå§‹çŠ¶æ€ï¼‰
            if (currentStep === 2) {
                clickedWords = 0;
                initPledgeGame();
            }
        }
        
        // å®Œæˆæ‰¿è¯º
        function completePledge() {
            // åˆ›å»ºåº†ç¥æ•ˆæœ
            createConfetti();
            
            // æ’­æ”¾æç¤ºéŸ³ï¼ˆå¦‚æœæµè§ˆå™¨å…è®¸ï¼‰
            playSuccessSound();
            
            // æ›´æ–°è¯ä¹¦ä¿¡æ¯
            document.getElementById('certName').textContent = employeeInfo.name;
            document.getElementById('certId').textContent = employeeInfo.id;
            document.getElementById('certDept').textContent = employeeInfo.department;
            
            // æ ¼å¼åŒ–å½“å‰æ—¶é—´
            const now = new Date();
            const timeString = now.toLocaleString('zh-CN');
            document.getElementById('certTime').textContent = timeString;
            
            // åˆ‡æ¢åˆ°å®Œæˆé¡µé¢
            document.getElementById('step3').classList.remove('active');
            document.getElementById('step4').classList.add('active');
        }
        
        // åˆ›å»ºåº†ç¥å½©èŠ±æ•ˆæœ
        function createConfetti() {
            const colors = ['#ff6b6b', '#4ecdc4', '#ffd166', '#06d6a0', '#118ab2', '#ef476f'];
            
            for (let i = 0; i < 100; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.top = '-10px';
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.opacity = '1';
                confetti.style.transform = `rotate(${Math.random() * 360}deg)`;
                
                document.body.appendChild(confetti);
                
                // åŠ¨ç”»
                const animation = confetti.animate([
                    { transform: `translate(0, 0) rotate(0deg)`, opacity: 1 },
                    { transform: `translate(${Math.random() * 100 - 50}px, ${window.innerHeight}px) rotate(${Math.random() * 720}deg)`, opacity: 0 }
                ], {
                    duration: 2000 + Math.random() * 3000,
                    easing: 'cubic-bezier(0.215, 0.61, 0.355, 1)'
                });
                
                // åŠ¨ç”»ç»“æŸåç§»é™¤å…ƒç´ 
                animation.onfinish = () => {
                    confetti.remove();
                };
            }
        }
        
        // æ’­æ”¾æˆåŠŸéŸ³æ•ˆ
        function playSuccessSound() {
            try {
                // åˆ›å»ºéŸ³é¢‘ä¸Šä¸‹æ–‡
                const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                
                // æ’­æ”¾æˆåŠŸéŸ³æ•ˆ
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();
                
                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);
                
                oscillator.frequency.setValueAtTime(523.25, audioContext.currentTime); // C5
                oscillator.frequency.setValueAtTime(659.25, audioContext.currentTime + 0.1); // E5
                oscillator.frequency.setValueAtTime(783.99, audioContext.currentTime + 0.2); // G5
                
                gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
                gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.5);
                
                oscillator.start(audioContext.currentTime);
                oscillator.stop(audioContext.currentTime + 0.5);
            } catch (e) {
                console.log("éŸ³é¢‘æ’­æ”¾å¤±è´¥ï¼Œä½†ä¸å½±å“ä¸»è¦åŠŸèƒ½");
            }
        }
        
